@{
    ViewData["Title"] = "Sign Up Form";
}

@model SignUpItem
@*this is the actual application that will be filled out by the visitor*@

<div class="container">
    <header>
        <br />
        <h4 class="text-center">Please Fill In The Information To Complete Your Scheduled Tour On</h4>
        <h1 class="text-center">@ViewBag.date at @ViewBag.time</h1> <!--Gets the date and time from the previous page-->
        <br />
    </header>

    <form asp-action="SignUpForm" method="post">
        <div class="form-group">
            <label asp-for="NameOfGroup">Group Name</label>
            <input asp-for="NameOfGroup" class="form-control" placeholder="The Smith Family">
        </div>
        <div class="form-group">
            <label asp-for="SizeOfGroup">Number of People in Group</label>
            <input asp-for="SizeOfGroup" class="form-control" placeholder="1">
        </div>
        <div class="form-group">
            <label asp-for="Email">Email address</label>
            <input asp-for="Email" type="email" class="form-control" placeholder="name@example.com">
        </div>
        <div class="form-group">
            <label asp-for="Phone">Phone Number (Optional)</label>
            <input asp-for="Phone" class="form-control" placeholder="(801)-123-4567">
        </div>

        <input asp-for="time" type="hidden" value=@ViewBag.time />
        <input asp-for="date" type="hidden" value=@ViewBag.date />

        @*This button signs the visior up with their info*@
        <button class="btn btn-secondary btn-outline-black btn-lg btn-block" type="submit"> Sign Up For Tour</button>

        <div asp-validation-summary="All"></div>
    </form>

</div>
